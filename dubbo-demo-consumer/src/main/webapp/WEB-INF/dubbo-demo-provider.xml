<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="hello-provider-spring-rest"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181" client="curator"/>

    <dubbo:protocol name="springrest" server="servlet" port="8080" contextpath="services"/>

    <dubbo:service interface="com.github.loafer.demo.dubbo.api.hello.HelloService"
                   ref="helloController"/>

    <bean id="helloController" class="com.github.loafer.demo.dubbo.hello.controller.HelloController"/>
</beans>